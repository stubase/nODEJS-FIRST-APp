<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HiBykes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="collapsingToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="SearchViewFocused" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/greyDark</item>
        <item name="android:textColorHint">@color/greyDark</item>
        <item name="android:textCursorDrawable">@drawable/cursor_input</item>
    </style>


    <style name="Theme.HiBykes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HiBykes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>